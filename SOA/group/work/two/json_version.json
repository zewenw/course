//submitFeedback
//json-schema
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/Group_work_two.schema.json",
  "title": "submitFeedback",
  "description": "providing a mark and feedback for a given submission",
  "type": "object",
  "properties": {
    "feedback": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string"
        },
        "mark": {
          "type": "integer"
        }
      },
      "required": [
        "text",
        "mark"
      ]
    },
    "submission": {
      "type": "object",
      "properties": {
        "date": {
          "type": "string"
        },
        "subNr": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "date",
        "subNr",
        "url"
      ]
    }
  },
  "required": [
    "feedback",
    "submission"
  ]
}
//json
{
    "feedback": {
        "text": "xxxx",
        "mark": 77
    },
    "submission": {
        "date": "submit_date",
        "subNr": "subNr",
        "url": "file_url"
    }
}